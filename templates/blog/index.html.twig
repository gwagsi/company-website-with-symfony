{% extends "base.html.twig" %}

{% block title %}Contractor: Blogs{% endblock %}

{% block body %}
    
    <!-- Blog Post Section -->
  <section class="padding ptb-xs-40">
    <div class="container">
      <div class="row"> 
        <!-- Post Item -->
        <div class="col-lg-9">
          <div class="row">
            <div class="col-md-12 blog-post-hr">
                       {% for post in post %}
              <div class="blog-post mb-30">
                <div class="post-media"> <img src="../uploads/blog-images/{{post.imageFilename}}" alt=""><span class="event-calender blog-date"> 21 <span>june</span> </span> </div>
                <div class="post-meta"> <span>{% trans %}by {% endtrans %}<a href="javascript:avoid(0);">Admin</a>,</span>
                  <div class="post-more-link pull-right">
                    <div class="icons-hover-black"> <a href="#" class="facebook-icon"> <i class="fa fa-facebook"></i> </a><a href="#" class="twitter-icon"> <i class="fa fa-twitter"></i> </a><a href="#" class="googleplus-icon"> <i class="fa fa-google-plus"></i> </a><a href="#" class="linkedin-icon"> <i class="fa fa-linkedin"></i> </a> </div>
                    <a class="btn-text xs-hidden"> <i class="ion-android-share-alt"></i></a> </div>
                </div>
                <div class="post-header">
                  <h2><a href="/blog-detail/{{ post.id }}">{{ post.translate.title }}</a></h2>
                </div>
                <div class="post-entry">
                  <p> {{ post.translate.description }}</p>
                </div>
                <div class="post-more-link pull-left"> <a href="/{{locale}}/blog-detail/{{ post.id }}" class="btn-text">{% trans %}Read More{% endtrans %}</a> </div>
              </div>

                 {% endfor %}
                 
            </div>
          </div>
          <!-- Pagination Nav -->
          <div class="pagination-nav text-left mt-30 mtb-xs-30 navigation ">
            {{ knp_pagination_render(post) }}
          </div>
          <!-- End Pagination Nav -->       
        </div>
        <!-- End Post Item --> 
       
      </div>
    </div>
  
  </section>
  <!-- End Blog Post Section --> 
{% endblock %}
